generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model TodoList {
  id        Int      @id @default(autoincrement())
  title     String
  items     Item[]
}

model Item {
  id        Int      @id @default(autoincrement())
  content   String
  completed Boolean  @default(false)
  list      TodoList @relation(fields: [listId], references: [id])
  listId    Int
}

